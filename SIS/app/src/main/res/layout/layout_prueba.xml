<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/llcontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

        android:background="#2196F3">

    <ImageButton
        android:id="@+id/botonEscaner"
        android:layout_width="322dp"
        android:layout_height="336dp"
        android:background="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584"
        app:srcCompat="@drawable/logosis" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="302dp"
        android:layout_height="66dp"
        android:text="Toca el logo para escanear el producto"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/botonEscaner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634" />


    <Button
        android:id="@+id/btnRecientes"
        android:layout_width="376dp"
        android:layout_height="54dp"
        android:background="@drawable/listar"
        android:gravity="bottom|end"
        android:text="Recientes"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonEscaner"
        app:layout_constraintVertical_bias="0.802" />

    <Button
        android:id="@+id/btnCerrarSesionUsuario"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/terminar_sesion"
        tools:layout_editor_absoluteX="375dp"
        tools:layout_editor_absoluteY="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
